<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phlink.bus.api.adinfo.dao.AdinfoMapper">

    <select id="findList" resultType="com.phlink.bus.api.adinfo.domain.Adinfo">
        select id,title,type,text,status,pubdate from t_adinfo where deleted='f'
    </select>

    <select id="getCount" resultType="java.lang.Integer">
         select count(*) from t_adinfo where status='1' AND deleted='f'
    </select>

</mapper>
